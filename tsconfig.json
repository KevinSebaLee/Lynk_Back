{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",                  // Set the source directory for your backend code
    "outDir": "./dist",                  // Set the output directory for compiled JS files

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "ESNext",                // Change from "nodenext" to "CommonJS" for Node.js compatibility
    "target": "ES2020",                  // Change from "esnext" to "ES2020" for a stable Node.js target
    "types": ["node"],                   // Add Node.js type definitions for backend development
    "lib": ["ES2020"],                   // Add ES2020 standard library for backend features
    // For nodejs:
    // "lib": ["esnext"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Style Options
    // "noImplicitReturns": true,
    // "noImplicitOverride": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,
    // "noPropertyAccessFromIndexSignature": true,

    // Recommended Options
    "strict": true,
    // "jsx": "react-jsx",                // Remove or comment out for backend (not needed for Express)
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
  "exclude": ["node_modules", "dist"]    // Exclude dependencies and build output from compilation
}